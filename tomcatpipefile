#!groovy

properties([disableConcurrentBuilds()])

pipeline {
   agent any
   
   options {
   timestamps()
   }
   stages {
       stage('Build') {
         steps {
              echo 'Installing...'
              sh 'ssh root@192.168.1.23 \'hostname\''
              sh 'yum install tomcat -y'
                }
        }
        stage('Test') {
           steps {
              echo 'Testing if ok'
              sh 'rpm -qa | grep tomcat*' 
                  }
       }
       }
    }


